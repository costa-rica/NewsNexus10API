# Application Configuration
APP_NAME=NewsNexus10API
PORT=8001
NODE_ENV=development
# Set to true to disable authentication (development only)
AUTHENTIFICATION_TURNED_OFF=false

# Database Configuration
NAME_DB=newsnexus10.db
PATH_DATABASE=/path/to/database/directory/
PATH_DB_BACKUPS=/path/to/db/backups/

# Project Resources Paths
PATH_PROJECT_RESOURCES=/path/to/project/resources/
PATH_PROJECT_RESOURCES_REPORTS=/path/to/reports/
PATH_TO_API_RESPONSE_JSON_FILES=/path/to/api/responses/
PATH_TO_AUTOMATION_EXCEL_FILES=/path/to/automation/excel/files/
PATH_TO_UTILITIES_ANALYSIS_SPREADSHEETS=/path/to/analysis/spreadsheets/
PATH_TO_UTILITIES_DEDUPER=/path/to/deduper/

# Logging Configuration
# Directory for log files (required in production)
PATH_TO_LOGS=/var/log/newsnexus/
# Maximum size per log file in bytes (default: 10485760 = 10MB)
LOG_MAX_SIZE=10485760
# Maximum number of log files to retain (default: 10)
LOG_MAX_FILES=10

# Security
JWT_SECRET=your-secret-key-here

# External API Configuration
ACTIVATE_API_REQUESTS_TO_OUTSIDE_SOURCES=false
KEY_OPEN_AI=your-openai-api-key-here

# External Service URLs
URL_BASE_NEWS_NEXUS_PYTHON_QUEUER=http://127.0.0.1:5000/
URL_BASE_TO_WEBSITE=http://localhost:3001

# Admin Configuration
ADMIN_EMAIL_CREATE_ON_STARTUP=["admin@example.com"]
ADMIN_NODEMAILER_EMAIL_ADDRESS=your-email@gmail.com
ADMIN_NODEMAILER_EMAIL_PASSWORD=your-app-password
